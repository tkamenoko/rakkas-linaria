{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "es6",
    "moduleResolution": "node",
    "types": ["rakkasjs/vite-types", "node"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["tests/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
